{
    __pytorch__: 180
    __v100__: n
    __worker__: 1
    __gpu__: 1
    __cpu__: 40
    __memory__: 150
    __parent__: [
        ${data_dir}/meta
        tests/sample_tasks/checkpoint

        [
           {__def__: {task_name: 'v0.1'}}
        ]
    ]
    __def__: {
        data_root: oss://xdp-expriment/gaoxing.gx/ydpoc/dpr/prepro/
        save_root: oss://xdp-expriment/gaoxing.gx/ydpoc/dpr/training/
    }

    batch_size: 1024
    learning_rate: 1e-4

    #batch_size: 512
    #learning_rate: 6e-5

    model: "bert_dpr_qa"
    loss: bert_dpr
    q_pretrained_model: oss://xdp-expriment/runqi.yrq/ckpt/custom_run19/<last>
    p_pretrained_model: oss://xdp-expriment/runqi.yrq/ckpt/custom_run19/<last>

    top_lr_ratio: 10
    max_loss: 1e10

    data_dir: ${data_root}/${task_name}
    save_dir: ${save_root}/${task_name}/${batch_size}_${learning_rate}

    save: true
    save_best_only: true
    overwrite: true

    max_epoch: 5
    major_metric: acc
    log_interval: 10
    eval_interval: 500
    fp16: false

    optimizer: adam
        adam_eps: 1e-6
        clip_norm: 5.0
        weight_decay: 0.01
        lr_scheduler: one_cycle
        warmup_steps: 0.1

}
