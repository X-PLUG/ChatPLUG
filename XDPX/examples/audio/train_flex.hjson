{
    __pytorch__: 180
    __v100__: n
    __worker__: 4
    __gpu__: 2
    __cpu__: 20
    __memory__: 80
    __parent__: [
        ${data_dir}/meta
        tests/sample_tasks/checkpoint
    ]

     __def__: {
        huggingface_root: oss://xdp-expriment/gaoxing.gx/huggingface
        data_root: oss://xdp-expriment/gaoxing.gx/dialoglue/BANKING77_yue/
        // save_root: oss://use/your/own/directory
        data_name:'yue-asr-audio-noises'
    }
    modality: "audio,text"
    use_feature_extractor_only: false
    freeze_feature_extractor: false
    mask_feature_prob:0.0

    learning_rate: 1e-4
    wav2vec_learning_rate:1e-4

    text_auto_config: xlm-roberta-base
    audio_auto_config: scottykwok/wav2vec2-large-xlsr-cantonese

    text_pretrained_model: ${huggingface_root}/xlm-roberta-base.pt
    audio_pretrained_model: ${huggingface_root}/wav2vec2-large-xlsr-cantonese.pt


    data_dir: ${data_root}/${data_name}
    save_dir: ${save_root}/${data_name}/${model}_${modality}_onlyfe_${use_feature_extractor_only}_freezefe_${freeze_feature_extractor}

    gradient_checkpointing: false
    freeze_bert: false
    freeze_wav2vec: false

    save: true
    save_best_only: true
    overwrite: true

    fp16: true
    batch_size: 64
    major_metric: acc
    max_epoch: 50
    kl_alpha: 1.0

    loss: audio_flex_cross_entropy
    model: audiomm_flex_classification

    optimizer: adam
        adam_eps: 1e-6
        clip_norm: 5.0
        weight_decay: 0.01
        lr_scheduler: one_cycle
        warmup_steps: 0.075

    output_dropout_prob: 0.1

    eval_interval_warmup: 200
    eval_interval: @{batch_size:64}/250
    log_interval: @{batch_size:64}/10

}
