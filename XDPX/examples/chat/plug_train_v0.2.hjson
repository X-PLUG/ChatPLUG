{
    __pytorch__: 180
    __v100__: n
    __worker__: 2
    __gpu__: 8
    __cpu__: 20
    __memory__: 40
    __parent__: [
        ${data_dir}/meta
        tests/sample_tasks/checkpoint
        [
            {__def__: {task_name: 'v0.9.1.fix'}}
        ]

        [
            {learning_rate: 2e-5}
        ]
    ]

    __def__: {
        data_root: data_processed
        save_root: data_saved_dsw
    }
    auto_model: google/mt5-base
    pretrained_model: oss://141457d2/zhimiao/models/plug_dialog/450000/mp_rank_00_model_states.pt
    data_dir: oss://141457d2/plug-dialog/chat/data_processed/${task_name}
    save_dir: oss://141457d2/plug-dialog/${save_root}/${task_name}/${learning_rate}
    dataset_format: torch

    save: true
    save_best_only: false
    overwrite: false

    major_metric: loss
    ascending_metric: false
    batch_size: 32
    train_subset: train*
    valid_subset: dev
    lazy_load: true
    update_freq: 16
    max_epoch: 60
    batch_by_len: true

    fp16: false
    gradient_checkpointing: false
    loss: chat
    model: palmchat

    optimizer: adam
        adam_eps: 1e-6
        clip_norm: 5.0
        weight_decay: 0.01
        lr_scheduler: one_cycle
        warmup_steps: 100

    eval_interval_warmup: 500
    eval_interval: 500
    log_interval: 20
}
